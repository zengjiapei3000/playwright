{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "declaration": false
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/.eslintrc.js"]
}
